{
  "breadcrumbs.enabled": false,
  "cSpell.enableFiletypes": ["jinja-html"],
  "debug.toolBarLocation": "docked",
  "editor.bracketPairColorization.enabled": true,
  "editor.codeLensFontFamily": "'JetBrains Mono', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "editor.cursorBlinking": "phase",
  "editor.cursorStyle": "line",
  "editor.fontFamily": "'JetBrains Mono', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "editor.fontLigatures": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.glyphMargin": true,
  "editor.guides.indentation": false,
  "editor.lineHeight": 1.5,
  "editor.minimap.enabled": false,
  "editor.overviewRulerBorder": false,
  "editor.renderLineHighlight": "none",
  "editor.scrollbar.horizontal": "hidden",
  "editor.showFoldingControls": "never",
  "editor.wordWrap": "on",
  "editor.wrappingIndent": "indent",
  "explorer.decorations.colors": false,
  "files.autoSave": "onFocusChange",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "git.enableSmartCommit": true,
  "github.copilot.enable": {
    "*": true,
    "markdown": "true",
    "plaintext": "true"
  },
  "latex-workshop.intellisense.citation.backend": "biblatex",
  "markdown.preview.scrollEditorWithPreview": true,
  "markdown.preview.scrollPreviewWithEditor": true,
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.allowChords": false,
  "terminal.integrated.fontFamily": "'Source Code Pro', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "terminal.integrated.fontSize": 14,
  "workbench.activityBar.location": "hidden",
  "workbench.editor.enablePreview": false,
  "workbench.editor.tabSizing": "shrink",
  "workbench.settings.editor": "json",
  "workbench.sideBar.location": "right",
  "workbench.statusBar.visible": false,
  "workbench.tree.renderIndentGuides": "none",
  "debug.console.fontSize": 14,
  "markdown.preview.fontSize": 14,
  "terminal.integrated.tabs.hideCondition": "never",
  "terminal.integrated.tabs.showActiveTerminal": "never",
  "workbench.colorTheme": "Dracula Soft"
}
